<root host="http://www.press-release.ru">
    <rule url="http://www.press-release.ru/add/">
        <action isajax="false" url="http://www.press-release.ru/add/" />
        <before>
            <action type="request" url='http://www.press-release.ru/add/' />
            <action type="download" url='http://www.press-release.ru/cgi-bin/captcha.pl?rand=' htmlname='code' />
        </before>
        <get>
          
        </get>
        <post>
            <field htmlname='section' htmltype='select' required='true' form='true'>
                <userdata name='section' />
            </field>

            <field htmlname='title' htmltype='text' required='true' form='true' analog='title'>
                <userdata name='title' />
            </field>

            <field htmlname='annot' htmltype='textarea' required='false' form='true' analog='preview' attr='rows=3'>
                <userdata name='preview' />
            </field>

            <field htmlname='body' htmltype='textarea' required='true' form='true' analog='release' attr='rows=8'>
                <userdata name='release' />
            </field>

            <field htmlname='keywords' htmltype='textarea' required='true' form='true' attr='rows=3'>
                <userdata name='keywords' />
            </field>

            <field htmlname='author' htmltype='text' required='true' form='true' analog='name'>
                <userdata name='name' />
            </field>
            
            <field htmlname='org' htmltype='text' required='true' form='true' analog='company'>
                <userdata name='company' />
            </field>
            <field htmlname='code' htmltype='captcha' required='true'  form='true'>
                <userdata name='captcha' />
            </field>
       </post>
        <headers>
        </headers>
        <after>
            <response url="http://www.press-release.ru/add/status_ok/" value="Материал будет опубликован после проверки модератором" />
        </after>
    </rule>

<rule></rule>
</root>
